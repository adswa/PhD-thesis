            \hbox{\@labelSignature}
        \end{minipage}
    \end{center}
    \clearpage
    \providecommand{\USCCover@true}{true}
    \ifthenelse{\equal{\USCCover@isTwoColumn}{\USCCover@true}}{\twocolumn}{}
}
